@model LoginViewModel
@{
    ViewBag.Title = "LoginView";

}


<h2>Login</h2>

<form asp-action="LoginView" method="post">
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" autocomplete="username" maxlength="50" style="width: 200px;" />
        <span asp-validation-for="Username" class="text-danger"></span>
        <p style="opacity: 0.7;">50 character limit</p>
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" maxlength="50" style="width: 200px;" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <p style="opacity: 0.7;">50 character limit</p>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
<!-- script for login message -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var loginMessage = '@TempData["LoginMessage"]';

        if (loginMessage) {
            alert(loginMessage);
        }
    });
</script>

