@model IEnumerable<ShelterManagerRedux.Models.ShelterLocation>

@{
    Layout = "~/Views/Shared/_LayoutPopup.cshtml";
}
@{
    ViewData["Title"] = "Client Count Popup";
}
<h1>@ViewData["Title"]</h1>

<style>
    td {
        border: solid;
    }
    @*for account info button*@
    .account-info-link {
        position: absolute;
        top: 10px;
        right: 10px;
    }
</style>

<button type="button" onclick="refresh()">Refresh</button>
<br />

<table align="left" border="1" style="border:1px solid black; background-color:white; font-size:18px; border-spacing: 10px;">
    <tr style="border:solid; background-color:grey; color:black;">
        <th align="center">Shelter Name</th>
        <th align="center">Available</th>
        <th align="center">Total</th>
    </tr>

    @foreach (ShelterManagerRedux.Models.ShelterLocation s in Model)
    {
        <tr style="border:solid;">
            <td align="center">
                @s.Shelter_Location_Description
            </td>
            <td align="center">
                @s.Shelter_Location_Available_Room
            </td>
            <td align="center">
                @s.Shelter_Location_Total_Room
            </td>
        </tr>
    }
</table>

<script>

    function refresh()
        {
        location.reload();
        }

</script>